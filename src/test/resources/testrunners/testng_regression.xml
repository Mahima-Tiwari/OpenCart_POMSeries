<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">  

<suite name="Open Cart Test Regression Suite" parallel="tests" thread-count="5" verbose="4">

	<test name="Open Cart Login Page Test">
		<parameter name="browser" value="chrome" />
	<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

<test name="Open Cart Forgot Password Test">
	<classes>
			<class name="com.qa.opencart.tests.ForgotPwdPageTest" />
		</classes>
	</test>

	<test name="Open Cart Accounts Page Test">
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="OpenCart Product Info Test">
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoTest" />
		</classes>
	</test>

	<test name="OpenCart RegisterTest Test">
		<classes>
			<class name="com.qa.opencart.tests.RegisterTest" />
		</classes>
	</test>

</suite>